@inherits LayoutComponentBase

<div class="page">
    <AuthorizeView Context="MainLayoutAuthorizeView">
        <Authorized>
            <div class="sidebar">
                <NavMenu />
            </div>

            <main>
                <article class="content px-4">
                    @Body
                </article>
            </main>
        </Authorized>
        <NotAuthorized>
            <main>
                <div class="top-row px-4 d-flex justify-content-between align-items-center">
                    <div class="navbar-brand">
                        <a href="/" class="text-decoration-none text-dark fw-bold fs-5">
                            HR-Decision Portal
                        </a>
                    </div>
                    <div>
                        <a href="/account/authorization" class="btn btn-primary">Войти / Регистрация</a>
                    </div>
                </div>

                <article class="content px-4">
                    @Body
                </article>
            </main>
        </NotAuthorized>
    </AuthorizeView>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
