                    <circle cx="250" cy="121" r="22" fill="#e9ecef" />

                    <g transform="translate(237, 105) scale(1.6)">
                        <path d="M8 7C9.65685 7 11 5.65685 11 4C11 2.34315 9.65685 1 8 1C6.34315 1 5 2.34315 5 4C5 5.65685 6.34315 7 8 7Z" fill="#adb5bd" />
