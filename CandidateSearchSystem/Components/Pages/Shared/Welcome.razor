    </section>

    <!-- How it works: 3 steps -->
    <section class="row text-center py-4">
        <div class="col-12 mb-3">
            <h2 class="h4">Как это работает</h2>
            <p class="text-muted">Коротко — чтобы вы сразу поняли сценарий использования.</p>
        </div>

        <div class="col-md-4 mb-3">
            <div class="p-3 h-100 border rounded">
                <div class="fs-1">🛡️</div>
                <h3 class="h6 mt-2">Проверенные профили</h3>
                <p class="small text-muted mb-0">Администратор добавляет и модератирует аккаунты рекрутеров.</p>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="p-3 h-100 border rounded">
                <div class="fs-1">🔎</div>
                <h3 class="h6 mt-2">Поиск по фильтрам</h3>
                <p class="small text-muted mb-0">Фильтрация по специализации, опыту, индустрии и формату работы.</p>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="p-3 h-100 border rounded">
                <div class="fs-1">✉️</div>
                <h3 class="h6 mt-2">Связь и сотрудничество</h3>
                <p class="small text-muted mb-0">Доступ к контактам и портфолио — связываетесь напрямую.</p>
            </div>
        </div>
    </section>

    <!-- Advantages -->
    <section class="row text-center py-4">
        <div class="col-12 mb-4">
            <h2 class="h4">Почему это удобно</h2>
        </div>

        <div class="col-md-6 mb-3">
            <div class="p-5 h-100 rounded card-glow d-flex flex-column justify-content-center" style="border-bottom: 4px solid var(--bs-primary);">
                <div class="fs-1 text-primary">🥇</div>
                <h3 class="h6 mt-3 fw-bold">Качество</h3>
                <p class="small mb-0 text-secondary">Только проверенные рекрутеры.</p>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="p-5 h-100 rounded card-glow d-flex flex-column justify-content-center" style="border-bottom: 4px solid var(--bs-success);">
                <div class="fs-1 text-success">⏱️</div>
                <h3 class="h6 mt-3 fw-bold">Скорость</h3>
                <p class="small mb-0 text-secondary">Экономия времени на подборе.</p>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="p-5 h-100 rounded card-glow d-flex flex-column justify-content-center" style="border-bottom: 4px solid var(--bs-info);">
                <div class="fs-1 text-info">🎯</div>
                <h3 class="h6 mt-3 fw-bold">Фокус</h3>
                <p class="small mb-0 text-secondary">Чёткие профили и кейсы.</p>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="p-5 h-100 rounded card-glow d-flex flex-column justify-content-center" style="border-bottom: 4px solid var(--bs-warning);">
                <div class="fs-1 text-warning">👍</div>
                <h3 class="h6 mt-3 fw-bold">Простота</h3>
                <p class="small mb-0 text-secondary">Поиск доступен без регистрации для HR.</p>
            </div>
        </div>
    </section>

    <!-- Static news: use News component -->
    <section class="row py-4">
        <div class="col-12">
            <h2 class="h5">Новости платформы</h2>

            <!-- News component is expected to render 2-3 static cards. -->
            <div class="news-grid-container mt-3">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h3 class="h6 mb-0">📢 Новости платформы</h3>
                    <button class="btn btn-outline-primary btn-sm" @onclick="NavigateToNewsList">Все новости →</button>
                </div>

                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    @for (int i = 0; i < MaxNewsItems; i++)
                    {
                        var news = i < DynamicNews.Count ? DynamicNews[i] : null;

                        <div class="col">
                            @if (news is not null)
                            {
                                <article class="news-tile card h-100 border rounded-3 p-3 d-flex flex-column"
                                         role="button" tabindex="0"
                                         @onclick="() => NavigateToNewsDetails(news.Id)"
                                         @onkeydown="@(e => OnCardKeyDown(e, news.Id))"
                                         aria-label="@($"Новость: {news.Title}")">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <span class="badge @GetBadgeClass(news.Level) fw-semibold text-uppercase small">@news.Level</span>
                                        <small class="text-muted">@news.CreatedAt.ToString("dd.MM.yyyy")</small>
                                    </div>

                                    <h4 class="news-title h6 fw-bold mb-2">@news.Title</h4>
                                    <p class="news-desc small text-muted mb-3">@news.Text</p>

                                    <div class="mt-auto d-flex justify-content-between align-items-center">
                                        <small class="text-muted">— @news.Author</small>
                                        <small class="text-primary small">Читать →</small>
                                    </div>
                                </article>
                            }
                            else
                            {
                                <div class="card placeholder-tile h-100 border rounded-3 p-3 d-flex flex-column text-center text-muted">
                                    <div class="mb-auto d-flex align-items-center justify-content-center" style="min-height:56px;">
                                        <small class="mb-0">Нет новости</small>
                                    </div>
                                    <div class="mt-auto">
                                        <small class="small text-muted">Здесь появятся свежие обновления</small>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>


        </div>
    </section>

    <hr />
    <footer class="text-center text-muted small py-3">© @DateTime.Now.Year — Платформа рекрутеров. Все права защищены.</footer>
</div>

@code {
    private const int MaxNewsItems = 9;
    private List<NewsPostDto> DynamicNews { get; set; } = new();
    [Inject] private INewsService Service { get; set; } = default!;
    [Inject] private ILogger<Welcome> logger { get; set; } = default!;
    [Inject] private NavigationManager NavigationManager { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        var result = await Service.GetNewsPageAsync(0, MaxNewsItems);
        result.Match(
            success => DynamicNews = success.Items.ToList(),
            error =>
            {
                DynamicNews = new List<NewsPostDto>();
                logger.LogError("Ошибка при загрузке новостей для BoardNews: {Error}", error);
            }
        );
    }

    // --- Стили бейджа/бордера соответствуют уровням (лёгкая логика) ---
    private string GetBadgeClass(NewsLevel level) => level switch
    {
        NewsLevel.HotFix => "bg-danger",
        NewsLevel.Release => "bg-success",
        NewsLevel.Update => "bg-info text-dark",
        _ => "bg-secondary"
    };

    // Навигация: детали новости и список
    private void NavigateToNewsList() => NavigationManager.NavigateTo("/news");
    private void NavigateToNewsDetails(Guid id) => NavigationManager.NavigateTo($"/news?id={id}");

    // Клавиатурная поддержка: Enter -> переход
    private void OnCardKeyDown(KeyboardEventArgs e, Guid id)
    {
        if (e.Key == "Enter" || e.Key == " ")
        {
            NavigateToNewsDetails(id);
        }
    }
}
